                    <div class="col-md-10">
                        @Html.EditorFor(model => model.AdditionalLifeCover, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AdditionalLifeCover, "", new { @class = "text-danger" })
                    </div>
                </div>

