@model HboFactFind.Domain.Pages.PageThree

@{
    ViewBag.Title = "Professional Advisers";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Professional Advisers</h3>
        @Html.Partial("_EditNavigationBar", Model.Id)
        <div class="hboDetailRowNoBorder row">
            <div class="col-xs-12">
                <strong>Please Provide Details Of Other Professional Advisers e.g. Solicitors & Accountants</strong>
            </div>
        </div>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.Id)
        <div class="hboDetailRow row">
            <div class="col-xs-12">
                <div class="headerStyle col-xs-12 col-sm-4">
                </div>
                <div class="columnTitle col-xs-12 col-sm-8">
                    <div class="col-xs-12 col-sm-6">
                        <strong>Client One</strong>
                    </div>
                    <div class="col-xs-12 col-sm-6">
                        <strong>Client Two</strong>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="hboDetailRow row">
                <div class="col-xs-12">
                    <div class="headerStyle col-xs-12 col-sm-4">
                        @Html.LabelFor(model => model.ClientOneSolicitor)
                    </div>
                    <div class="fieldStyle col-xs-12 col-sm-8">
                        <div class="topTFStyle col-xs-12 col-sm-6">
                            @Html.EditorFor(model => model.ClientOneSolicitor, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.ClientOneSolicitor, "", new {@class = "text-danger"})
                        </div>
                        <div class="bottomTFStyle col-xs-12 col-sm-6">
                            @Html.EditorFor(model => model.ClientTwoSolicitor, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.ClientTwoSolicitor, "", new {@class = "text-danger"})
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="hboDetailRow row">
                <div class="col-xs-12">
                    <div class="headerStyle col-xs-12 col-sm-4">
                        @Html.LabelFor(model => model.ClientOneAccountant)
                    </div>
                    <div class="fieldStyle col-xs-12 col-sm-8">
                        <div class="topTFStyle col-xs-12 col-sm-6">
                            @Html.EditorFor(model => model.ClientOneAccountant, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.ClientOneAccountant, "", new {@class = "text-danger"})
                        </div>
                        <div class="bottomTFStyle col-xs-12 col-sm-6">
                            @Html.EditorFor(model => model.ClientTwoAccountant, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.ClientTwoAccountant, "", new {@class = "text-danger"})
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="hboDetailRow row">
                <div class="col-xs-12">
                    <div class="headerStyle col-xs-12 col-sm-4">
                        @Html.LabelFor(model => model.ClientOneAdviserOther)
                    </div>
                    <div class="fieldStyle col-xs-12 col-sm-8">
                        <div class="topTFStyle col-xs-12 col-sm-6">
                            @Html.EditorFor(model => model.ClientOneAdviserOther, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.ClientOneAdviserOther, "", new {@class = "text-danger"})
                        </div>
                        <div class="bottomTFStyle col-xs-12 col-sm-6">
                            @Html.EditorFor(model => model.ClientTwoAdviserOther, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.ClientTwoAdviserOther, "", new {@class = "text-danger"})
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="buttonPanel col-xs-12">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="factFindEditReturnButton">
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}