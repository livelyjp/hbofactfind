@model HboFactFind.Domain.Pages.PageThree
<div class="hboDetailRowNoBorder row">
    <div class="col-xs-12">
        <strong>Please Provide Details Of Other Professional Advisers e.g. Solicitors & Accountants</strong>
    </div>
</div>
<div class="hboDetailRow row">
    <div class="col-xs-12">
        <div class="headerStyle col-xs-12 col-sm-4">
        </div>
        <div class="columnTitle col-xs-12 col-sm-8">
            <div class="col-xs-12 col-sm-6">
                <strong>Client One</strong>
            </div>
            <div class="col-xs-12 col-sm-6">
                <strong>Client Two</strong>
            </div>
        </div>
    </div>
</div>

<div class="hboDetailRow row">
    <div class="col-xs-12">
        <div class="headerStyle col-xs-12 col-sm-4">
            @Html.DisplayNameFor(model => model.ClientOneSolicitor)
        </div>
        <div class="fieldStyle col-xs-12 col-sm-8">
            <div class="topTFStyle col-xs-12 col-sm-6">
                @Html.DisplayFor(model => model.ClientOneSolicitor)
            </div>
            <div class="bottomTFStyle col-xs-12 col-sm-6">
                @Html.DisplayFor(model => model.ClientTwoSolicitor)
            </div>
        </div>
    </div>
</div>


<div class="hboDetailRow row">
    <div class="col-xs-12">
        <div class="headerStyle col-xs-12 col-sm-4">
            @Html.DisplayNameFor(model => model.ClientOneAccountant)
        </div>
        <div class="fieldStyle col-xs-12 col-sm-8">
            <div class="topTFStyle col-xs-12 col-sm-6">
                @Html.DisplayFor(model => model.ClientOneAccountant)
            </div>
            <div class="bottomTFStyle col-xs-12 col-sm-6">
                @Html.DisplayFor(model => model.ClientTwoAccountant)
            </div>
        </div>
    </div>
</div>


<div class="hboDetailRowNoBorder row">
    <div class="col-xs-12">
        <div class="headerStyle col-xs-12 col-sm-4">
            @Html.DisplayNameFor(model => model.ClientOneAdviserOther)
        </div>
        <div class="fieldStyle col-xs-12 col-sm-8">
            <div class="topTFStyle col-xs-12 col-sm-6">
                @Html.DisplayFor(model => model.ClientOneAdviserOther)
            </div>
            <div class="bottomTFStyle col-xs-12 col-sm-6">
                @Html.DisplayFor(model => model.ClientTwoAdviserOther)
            </div>
        </div>
    </div>
</div>

<div class="col-xs-12" style="text-align: center">
    <p>
        @Html.ActionLink("Edit", "PageThree", new { id = Model.Id }, new { @class = "btn btn-default hidden-print" })
    </p>
</div>