                <div class="topTFStyle col-xs-12">
                    @Html.DisplayFor(model => model.Notes)
                </div>
            </div>
        </div>
    </div>

    <div class="col-xs-12" style="text-align: center">
        <p>
            @Html.ActionLink("Edit", "PageEight", new { id = Model.Id })
        </p>
    </div>
