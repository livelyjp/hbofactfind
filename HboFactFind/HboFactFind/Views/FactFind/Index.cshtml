@model IEnumerable<HboFactFind.Domain.FactFind>

@{
    ViewBag.Title = "View All Fact Finds";
}

<h2>View All Fact Finds</h2>

<div class="row">
    <div class="col-sm-2 col-sm-offset-5">
        @Html.ActionLink("New Fact Find", "Create", null, new { @class = "blueButton" })
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientOneName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientTwoName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompletionDateTime)
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <th>
            @Html.DisplayFor(model => item.Id)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.ClientOneName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClientTwoName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompletionDateTime)
        </td>
        <td>
            @Html.RouteLink("Edit", "PageOne", new { @id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
