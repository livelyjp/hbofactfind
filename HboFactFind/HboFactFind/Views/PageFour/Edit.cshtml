@using HboFactFind.Domain.Questions.Dependants
@model HboFactFind.Domain.Pages.PageFour

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>PageFour</h4>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="hboDetailRowNoBorder row">
                <div class="col-xs-12">
                    <div class="headerStyle col-xs-12 col-sm-4">
                        @Html.LabelFor(model => model.AnyFinancialDependants)
                    </div>
                    <div class="fieldStyle col-xs-12 col-sm-8">
                        <div class="topTFStyle col-xs-12 col-sm-6">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.AnyFinancialDependants)
                                @Html.ValidationMessageFor(model => model.AnyFinancialDependants, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="bottomTFStyle col-xs-12 col-sm-6">
                            <div class="checkbox">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="hboDetailRowNoBorder row">
            <h4>Dependants</h4>
            <div class="col-xs-12">
                @Html.Partial("~/Views/FinancialDependants/Partials/_FinancialDependantsEditIndex.cshtml", Model.FinancialDependants)
            </div>
        </div>



        <div class="buttonPanel col-xs-12">
            <input type="submit" id="addFincancialDependantButton" value="Add Dependant" class="btn addFincancialDependantButton btn-default" />
        </div>

        <div class="hboDetailRowNoBorder row">
            <h4>Other non-financial dependants that you would like to condifer in relation to this advice</h4>
            <div class="col-xs-12">
                @Html.Partial("~/Views/NonFinancialDependants/Partials/_NonFinancialDependantIndex.cshtml", Model.NonFinancialDependantses)
            </div>
        </div>


        

        <div class="form-group">
            <div class="buttonPanel col-xs-12">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@Html.Partial("~/Views/FinancialDependants/Partials/_FinancialDependantsCreate.cshtml", new FinancialDependant { PageFourId = Model.Id })


<script type="text/javascript">

    $(document).ready(function () {
        $("#dialog").hide();
        $(window).resize(function () {
            $("#dialog").dialog("option", "position", "center");
        });

        $(".addFincancialDependantButton").on("click", function(e) {
            e.preventDefault();
            $("#dialog").dialog();
        });
    });

</script>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}