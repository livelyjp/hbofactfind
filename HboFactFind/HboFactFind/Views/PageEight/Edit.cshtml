@model HboFactFind.Domain.Pages.PageEight

@{
    ViewBag.Title = "Emergancy Fund";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Emergancy Fund</h3>
        @Html.Partial("_EditNavigationBar", new KeyValuePair<string, long>("EmergancyFund", Model.Id))

        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.Id)

        <div class="hboDetailRow row">
            <div class="col-xs-12">
                <div class="headerStyle col-xs-12 col-sm-4">
                </div>
                <div class="columnTitle col-xs-12 col-sm-8">
                    <div class="col-xs-12 col-sm-4">
                        <strong>Client One</strong>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <strong>Client Two</strong>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <strong>Joint</strong>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="hboDetailRow row">
                <div class="col-xs-12">
                    <div class="headerStyle col-xs-12 col-sm-4">
                        @Html.LabelFor(model => model.ClientOneRequiredEmergancyFund)
                    </div>
                    <div class="fieldStyle col-xs-12 col-sm-8">
                        <div class="topTFStyle col-xs-12 col-sm-4">
                            @Html.EditorFor(model => model.ClientOneRequiredEmergancyFund, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.ClientOneRequiredEmergancyFund, "", new {@class = "text-danger"})
                        </div>
                        <div class="bottomTFStyle col-xs-12 col-sm-4">
                            @Html.EditorFor(model => model.ClientTwoRequiredEmergancyFund, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.ClientTwoRequiredEmergancyFund, "", new {@class = "text-danger"})
                        </div>
                        <div class="bottomTFStyle col-xs-12 col-sm-4">
                            @Html.EditorFor(model => model.JointRequiredEmergancyFund, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.JointRequiredEmergancyFund, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="hboDetailRowNoBorder row">
                <div class="col-xs-12">
                    <div class="headerStyle col-xs-12 col-sm-4">
                        @Html.LabelFor(model => model.ClientOnePlannedExpenditure)
                    </div>
                    <div class="fieldStyle col-xs-12 col-sm-8">
                        <div class="topTFStyle col-xs-12 col-sm-4">
                            @Html.EditorFor(model => model.ClientOnePlannedExpenditure, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.ClientOnePlannedExpenditure, "", new {@class = "text-danger"})
                        </div>
                        <div class="bottomTFStyle col-xs-12 col-sm-4">
                            @Html.EditorFor(model => model.ClientTwoPlannedExpenditure, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.ClientTwoPlannedExpenditure, "", new {@class = "text-danger"})
                        </div>
                        <div class="bottomTFStyle col-xs-12 col-sm-4">
                            @Html.EditorFor(model => model.JointPlannedExpenditure, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.JointPlannedExpenditure, "", new {@class = "text-danger"})
                        </div>
                    </div>
                </div>
            </div>
        </div>
        *We would normally recommend a minimum of 3 months' expenditure. If a different level is agreed or required please provide the reason for this in the Notes section
        <div class="hboDetailRowNoBorder row">
        </div>
        <h4>Will</h4>
        <div class="hboDetailRow row">
            <div class="col-xs-12">
                <div class="headerStyle col-xs-12 col-sm-4">
                </div>
                <div class="columnTitle col-xs-12 col-sm-8">
                    <div class="col-xs-12 col-sm-6">
                        <strong>Client One</strong>
                    </div>
                    <div class="col-xs-12 col-sm-6">
                        <strong>Client Two</strong>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="hboDetailRow row">
                <div class="col-xs-12">
                    <div class="headerStyle col-xs-12 col-sm-4">
                        @Html.LabelFor(model => model.ClientOneMadeAWill)
                    </div>
                    <div class="fieldStyle col-xs-12 col-sm-8">
                        <div class="topTFStyle col-xs-12 col-sm-6">
                            <div class="checkbox">
                                @Html.RadioButtonFor(model => model.ClientOneMadeAWill, true) Yes
                                @Html.RadioButtonFor(model => model.ClientOneMadeAWill, false) No*
                                @Html.ValidationMessageFor(model => model.ClientOneMadeAWill, "", new {@class = "text-danger"})
                            </div>
                        </div>
                        <div class="bottomTFStyle col-xs-12 col-sm-6">
                            <div class="checkbox">
                                @Html.RadioButtonFor(model => model.ClientTwoMadeAWill, true) Yes
                                @Html.RadioButtonFor(model => model.ClientTwoMadeAWill, false) No*
                                @Html.ValidationMessageFor(model => model.ClientTwoMadeAWill, "", new {@class = "text-danger"})
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        Please confirm the main provisions in the notes section.
        *If no, please explain why this has been considered in the notes section.

        <div class="form-group">
            <div class="hboDetailRow row">

            </div>
        </div>

        <div class="form-group">
            <div class="hboDetailRowNoBorder row">
                <div class="col-xs-12">
                    <div class="headerStyle col-xs-12 col-sm-4">
                        @Html.LabelFor(model => model.Notes)
                    </div>
                    <div class="fieldStyle col-xs-12 col-sm-8">
                        <div class="topTFStyle col-xs-12">
                            @Html.EditorFor(model => model.Notes, new {htmlAttributes = new {@class = "form-control", placeholder = "*Please provide details"}})
                            @Html.ValidationMessageFor(model => model.Notes, "", new {@class = "text-danger"})
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="buttonPanel col-xs-12">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="factFindEditReturnButton">
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}